<% layout("/layouts/boilerplate.ejs") %>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Roboto', sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-color: #f8f9fa;
        color: #333;
        text-align: center;
    }

    .error-container {
        max-width: 600px;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        margin: auto;
    }

    .error-container h1 {
        font-size: 3rem;
        color: #fe424d;
        margin-bottom: 20px;
    }

    .error-container p {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 20px;
    }

    .error-container img {
        width: 100%;
        max-width: 400px;
        margin-bottom: 20px;
    }

    .error-container a {
        text-decoration: none;
        color: #fff;
        background-color: #fe424d;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .error-container a:hover {
        background-color: #d7383e;
    }
</style>

<body>
    <div class="error-container">
        <img src="https://thumbs.dreamstime.com/b/scared-woman-resting-next-to-giant-bed-bug-vector-cartoon-girl-hotel-room-finding-insects-nightmare-situation-294234154.jpg" alt="Cartoon unable to find hotel">
        <h1>Page Not Found</h1>
        <p>Oops! It seems like we couldn't find the page you're looking for. Maybe it's lost just like our cartoon friend here.</p>
        <a href="/">Go Back to Home</a>
    </div>
</body>
