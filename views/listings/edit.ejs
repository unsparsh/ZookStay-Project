<% layout("/layouts/boilerplate.ejs") %>
<head>
    <style>
        .form-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            margin: 20px auto;
        }

        h3 {
            color: #fe424d;
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        input, textarea, button {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        input:focus, textarea:focus {
            outline: none;
            border-color: #fe424d;
            box-shadow: 0 0 4px #fe424d;
        }

        button {
            background-color: #fe424d;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #d43a42;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h3>Edit the List Item:</h3>
            <form action="/listings/<%= listing._id %>?_method=PUT" method="post">
                <input type="text" name="listing[title]" value="<%= listing.title %>" required>
                <textarea name="listing[description]" required><%= listing.description %></textarea>
                <input type="text" name="listing[image]" value="<%= listing.image.url %>" required>
                <input type="number" name="listing[price]" value="<%= listing.price %>" required>
                <input type="text" name="listing[location]" value="<%= listing.location %>" required>
                <input type="text" name="listing[country]" value="<%= listing.country %>" required>
                <button type="submit">Edit</button>
            </form>
        </div>
    </div>
</body>
